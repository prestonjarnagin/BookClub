<h1><%= @book.title %></h1>

<form action="/reviews/new" method="get"><input type="submit" value="Add Review"></form>

<%= link_to 'Delete', book_path(@book), method: :delete%>

<p>Author: <% @book.authors.each do |author| %>
  <%= author.name  %>
<% end %></p>
<p>Pages: <%= @book.pages %></p>
<p>Year Published: <%= @book.year %></p>
<h2>Reviews</h2>
<% @reviews.each do |review| %>
<p>Title: <%= review.title %> </p>
<p>Username: <%= review.username %> </p>
<p> <%= review.body %> </p>
<p>Rating (out of 5): <%= review.rating %> </p>
<% end %>
